<h1>Add a new Rabbit user</h1>
<% @user.password = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%> 
<p><%= label_tag 'Name' %><br/>
<%= f.text_field :name %></p>

<p><%= label_tag 'VHost' %><br/>
<%= f.collection_select(:vhost, @vhosts, :name, :name) %></p>

<p><%= label_tag 'Config Permission' %><br/>
<%= f.text_field :config %></p>

<p><%= label_tag 'Write Permission' %><br/>
<%= f.text_field :write %></p>

<p><%= label_tag 'Read Permission' %><br/>
<%= f.text_field :read %></p>

<p><%= label_tag 'password' %><br/>
<%= f.password_field :password %></p>

<p><%= submit_tag 'Submit' %>
<% end -%> 


